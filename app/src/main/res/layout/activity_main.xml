<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivsky"
        android:layout_width="0dp"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/my_image_sky" />

    <ImageView
        android:id="@+id/ivsunshine"
        android:layout_width="293dp"
        android:layout_height="202dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingTop="130dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_image_sunshine" />

    <ImageView
        android:id="@+id/ivsun"
        android:layout_width="243dp"
        android:layout_height="135dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toTopOf="@+id/ivgrass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_image_sun" />

    <ImageView
        android:id="@+id/ivcloud1"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_image_clouds" />

    <ImageView
        android:id="@+id/ivcloud2"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_image_clouds" />

    <ImageView
        android:id="@+id/ivcloud3"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_image_clouds" />

    <ImageView
        android:id="@+id/ivcloud4"
        android:layout_width="48dp"
        android:layout_height="19dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_image_clouds" />

    <ImageView
        android:id="@+id/ivcloud5"
        android:layout_width="75dp"
        android:layout_height="23dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="135dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivsky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/my_image_clouds" />

    <ImageView
        android:id="@+id/ivgrass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivsky"
        app:srcCompat="@drawable/my_image_grass" />

</androidx.constraintlayout.widget.ConstraintLayout>